{% zone "Header" %}
<section class="hero-wrap js-fullheight">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight justify-content-center align-items-center">
      <div class="col-lg-8 col-md-6 ftco-animate d-flex align-items-center">
        <div class="text text-center">
          <span class="subheading">Hey! I am</span>
          <h1>{{ Site.Properties.Portfolio.Portfolio.Owner.Text}}</h1>
          <h2>
            I'm a
            <span
                  class="txt-rotate"
                  data-period="2000"
          </h2>
        </div>
      </div>
    </div>
  </div>
  </div>
  <div class="mouse">
    <a href="#" class="mouse-icon">
      <div class="mouse-wheel">
        <span class="ion-ios-arrow-round-down"></span>
      </div>
    </a>
  </div>
</section>
{% endzone %}

{{Model.Content | shape_render }}
<section class="ftco-section" id="blog-section">
   {% assign blogs = Queries.RecentBlogPosts | query %}
   {% assign count = blogs | size %}
   {% if count > 0 %}
  <div class="container">
    <div class="row justify-content-center mb-5 pb-5">
      <div class="col-md-7 heading-section text-center ftco-animate">
        <h1 class="big big-2">Blog</h1>
        <h2 class="mb-4">My Blog</h2>
        <p> {{Site.Properties.Portfolio.Portfolio.BlogDescription.Text }}</p>
      </div>
    </div>
    <div class="row d-flex">
    {% for blog in blogs %}
      <div class="col-md-4 d-flex ftco-animate fadeInUp ftco-animated">
        <div class="blog-entry justify-content-end">
          <a href="{{blog.ContentItem.Content.AutoroutePart.Path}}" class="block-20" style="background-image: url('{{blog.ContentItem.Content.BlogPost.Image.Paths.first | asset_url }}');">
          </a>
          <div class="text mt-3 float-right d-block">
            <h3 class="heading">
              <a href="{{blog.ContentItem.Content.AutoroutePart.Path}}">{{blog.ContentItem.Content.TitlePart.Title }}</a>
            </h3>
            <div class="d-flex align-items-center mb-3 meta">
              <p class="mb-0">
                <span class="mr-2">{{blog.PublishedUtc | date: "%B %d, %Y"}}</span>
                <a href="#" class="mr-2">{{blog.Author }}</a>
                <!--<a href="#" class="meta-chat">
                  <span class="icon-chat"></span> 3
                </a> -->
              </p>
            </div>
            <p>{{blog.ContentItem.Content.BlogPost.Subtitle.Text }}</p>
          </div>
        </div>
        </div>
    {% endfor %}
    </div>
  </div>
   {% endif %}
</section>

{% if Site.Properties.Portfolio.Portfolio.Available.Value %}
<section class="ftco-section ftco-hireme img" style="background-image: url(/TheRonaldoTheme.OrchardCore/images/bg_1.jpg)">
  <div class="overlay"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 ftco-animate text-center">
        <h2>
          I'm <span>Available</span> for freelancing
        </h2>
        <p>{{Site.Properties.Portfolio.Portfolio.AvailableDescription.Text }}</p>
        <p class="mb-0">
          <a href="#contactme-section" class="btn btn-primary py-3 px-5">Hire me</a>
        </p>
      </div>
    </div>
  </div>
</section>
{%endif %}
<section class="ftco-section contact-section ftco-no-pb" id="contact-section">
      <div class="container">
      	<div class="row justify-content-center mb-5 pb-3">
          <div class="col-md-7 heading-section text-center ftco-animate">
            <h1 class="big big-2">Contact</h1>
            <h2 class="mb-4">Contact Me</h2>
        <p>{{Site.Properties.Portfolio.Portfolio.ContactDescription.Text }}</p>
          </div>
        </div>

        <div class="row d-flex contact-info mb-5">
          <div class="col-md-6 col-lg-3 d-flex ftco-animate">
          	<div class="align-self-stretch box text-center p-4 shadow">
          		<div class="icon d-flex align-items-center justify-content-center">
          			<span class="icon-map-signs"></span>
          		</div>
          		<div>
	          		<h3 class="mb-4">Address</h3>
                <p>{{Model.ContentItem.Content.About.Address.Text}}</p>
		          </div>
	          </div>
          </div>
          <div class="col-md-6 col-lg-3 d-flex ftco-animate">
          	<div class="align-self-stretch box text-center p-4 shadow">
          		<div class="icon d-flex align-items-center justify-content-center">
          			<span class="icon-phone2"></span>
          		</div>
          		<div>
	          		<h3 class="mb-4">Contact Number</h3>
              <a href="tel://{{Model.ContentItem.Content.About.Phone.Text}}">{{Model.ContentItem.Content.About.Phone.Text}}</a>
	            </div>
	          </div>
          </div>
          <div class="col-md-6 col-lg-3 d-flex ftco-animate">
          	<div class="align-self-stretch box text-center p-4 shadow">
          		<div class="icon d-flex align-items-center justify-content-center">
          			<span class="icon-paper-plane"></span>
          		</div>
          		<div>
	          		<h3 class="mb-4">Email Address</h3>
              <a href="mailto:{{Model.ContentItem.Content.About.Email.Text}}">{{Model.ContentItem.Content.About.Email.Text}}</a>
		          </div>
	          </div>
          </div>
          <div class="col-md-6 col-lg-3 d-flex ftco-animate">
          	<div class="align-self-stretch box text-center p-4 shadow">
          		<div class="icon d-flex align-items-center justify-content-center">
          			<span class="icon-globe"></span>
          		</div>
          		<div>
	          		<h3 class="mb-4">Website</h3>
                <a href="{{Model.ContentItem.Content.About.Website.Text}}">{{Model.ContentItem.Content.About.Website.Text}}</a>
	            </div>
	          </div>
          </div>
        </div>
  
        <div class="row no-gutters block-9" id="contactme-section">
          <div class="col-md-6 order-md-last d-flex">
            <form action="#" class="bg-light p-4 p-md-5 contact-form">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Your Name">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Your Email">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Subject">
              </div>
              <div class="form-group">
                <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
              </div>
              <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
              </div>
            </form>
          </div>
          <div class="col-md-6 d-flex">
        <div class="img" style="background-image: url({{ Model.ContentItem.Content.About.PortfolioImage.Paths.first | asset_url }});"></div>
          </div>
        </div>
      </div>
    </section>

